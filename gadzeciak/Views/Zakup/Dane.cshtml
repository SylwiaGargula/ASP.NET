@model gadzeciak.Models.Zamowienie

@{
    ViewBag.Title = "Dane";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" id="sortowanie">
   
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


    <h2>Zakupy</h2>
    
    <hr />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Dane do wysyłki</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Ulica)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Ulica)
                @Html.ValidationMessageFor(model => model.Ulica,"", new { @class = "text-danger" })
               
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Miasto)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Miasto)
                @Html.ValidationMessageFor(model => model.Miasto, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Wojewodztwo)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Wojewodztwo)
                @Html.ValidationMessageFor(model => model.Wojewodztwo, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.KodPocztowy)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.KodPocztowy)
                @Html.ValidationMessageFor(model => model.KodPocztowy, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Panstwo)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Panstwo)
                @Html.ValidationMessageFor(model => model.Panstwo, "", new { @class = "text-danger" })
            </div>


            <div class="editor-field">
                @Html.LabelFor(model => model.NumerTelefonu)
            </div>
            <div class="editor-label">
                @Html.EditorFor(model => model.NumerTelefonu)
                @Html.ValidationMessageFor(model => model.NumerTelefonu, "", new { @class = "text-danger" })
            </div>
            <hr />
            <div>
                <hr />
                <h3>Podsumowanie koszyka</h3>
                <h4>
                    Liczba towarów w koszyku: @String.Format("{0:F}", ViewData["ilosc"]) sztuk<br />
                    Wartość koszyka: @String.Format("{0:F}", ViewData["wartosc"]) zł<br />
                </h4>
            </div>

            <p>
                <input type="submit" value="Kup" class="btn btn-orange"/>
            </p>
        </fieldset>
    }

    </div>