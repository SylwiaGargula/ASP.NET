@model IEnumerable<gadzeciak.Models.Produkt>

@{ 
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";

}

<div class="row" id="sortowanie">
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

             $('.DodajProdukt').click(function () {
                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("CreatePartial","Produkts")',
                    success: function (result) {
                        $('#widok').html(result);
                    }
                })
            })

             })

    </script>


    <div class="row" id="widok">
        <p>
            <a href="#" class="DodajProdukt">Dodaj produkt</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Kategoria.Nazwa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nazwa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dostepnosc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OfertaSpecjalna)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Polecane)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zdjecie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zdjecie2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zdjecie3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cena)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kategoria.Nazwa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nazwa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Opis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dostepnosc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfertaSpecjalna)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Polecane)
                    </td>
                    <td>

                        <img src=@item.Zdjecie alt="Brak" width="150" height="150" />

                    </td>
                    <td>
                        <img src=@item.Zdjecie2 alt="Brak" width="150" height="150" />
                    </td>
                    <td>
                        <img src=@item.Zdjecie3 alt="Brak" width="150" height="150" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cena)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.IdProdukt })
                        @Html.ActionLink("Usuń", "Delete", new { id = item.IdProdukt })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>