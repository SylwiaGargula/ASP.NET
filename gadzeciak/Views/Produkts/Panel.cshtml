@model gadzeciak.Models.Produkt

@{
    ViewBag.Title = "Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" id="sortowanie">
    <div>
        <div class="row">
            <h2>Panel Administratora</h2>

            <h3>Tutaj możesz dodać nowe produkty i kategorie w sklepie oraz przydzielić role.</h3>


            <input type="button" value="Produkty" class="DodajProdukt" onclick="location.href='#';" />


            <input type="button" value="Kategorie" class="DodajKategorie" onclick="location.href='#';" />

            <input type="button" value="Role" class="DodajRole" onclick="location.href='#';" />


        </div>

        <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
        <script type="text/javascript">
        $(document).ready(function () {

            $('.DodajProdukt').click(function () {
                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("IndexPartial","Produkts")',
                    success: function (result) {
                        $('#widok').html(result);
                    }
                })
            })


             $('.DodajKategorie').click(function () {
                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("IndexPartial","Kategorias")',
                    success: function (result) {
                        $('#widok').html(result);
                    }
                })
            })

            $('.DodajRole').click(function () {
                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("IndexPartial","UserRoles")',
                    success: function (result) {
                        $('#widok').html(result);
                    }
                })
            })

             })

        </script>
        <br />
        <br />
        <hr />
        <div class="row" id="widok"> </div>

    </div>
    </div>