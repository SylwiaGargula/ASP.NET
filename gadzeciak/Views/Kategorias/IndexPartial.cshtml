@model IEnumerable<gadzeciak.Models.Kategoria>

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";

}
<div class="row" id="sortowanie">

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

             $('.DodajKategorie').click(function () {
                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("CreatePartial","Kategorias")',
                    success: function (result) {
                        $('#widok').html(result);
                    }
                })
            })

             })

    </script>


    <div class="row" id="widok">
        <p>
            <a href="#" class="DodajKategorie">Dodaj kategorie</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nazwa)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nazwa)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.IdKategoria })
                        @Html.ActionLink("Usuń", "Delete", new { id = item.IdKategoria })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>