@model gadzeciak.Models.Rejestracja
@{ 
    ViewBag.Title = "Rejestracja";
}

<h2>Create a New Account</h2>
<p>
    Stwórz konto.
</p>
<p>
    Hasło powinno mieć nie mniej niż @Membership.MinRequiredPasswordLength znaków.
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Wystąpił błąd podczas rejestracji. Spróbuj ponownie")
    <div>
        <fieldset>
            <legend>Dane konta</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.NazwaUZytkownika)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NazwaUZytkownika)
                @Html.ValidationMessageFor(m => m.NazwaUZytkownika)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Haslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Haslo)
                @Html.ValidationMessageFor(m => m.Haslo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ZatwierdzoneHaslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ZatwierdzoneHaslo)
                @Html.ValidationMessageFor(m => m.ZatwierdzoneHaslo)
            </div>

            <p>
                <input type="submit" value="Zarejestruj się" />
            </p>
        </fieldset>
    </div>
}