@model gadzeciak.Models.Logowanie
@{ 
    ViewBag.Title = "Logowanie";
}

<h2>Log On</h2>
<p>
   Wpisz nazwę użytkownika i hasło. @Html.ActionLink("Zarejestruj się","Rejestracja") jeśli nie masz jeszcze konta.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Logowanie zakończone niepowodzeniem. Spróbuj jeszcze raz")

@using (Html.BeginForm())
{
    <div>
        <fieldset>
            <legend>Dane konta</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.NazwaUzytkownika)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NazwaUzytkownika)
                @Html.ValidationMessageFor(m => m.NazwaUzytkownika)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Haslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Haslo)
                @Html.ValidationMessageFor(m => m.Haslo)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.Przypomnij)
                @Html.LabelFor(m => m.Przypomnij)
            </div>

            <p>
                <input type="submit" value="Zaloguj się" />
            </p>
        </fieldset>
    </div>
}
