@model gadzeciak.Models.ZmienHaslo
@{ 
    ViewBag.Title = "ZmienHaslo";
}

<h2>Change Password</h2>
<p>
    Zmiana hasła
</p>
<p>
    Nowe hasło powinno mieć nie mniej niż @Membership.MinRequiredPasswordLength znaków.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.StareHaslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.StareHaslo)
                @Html.ValidationMessageFor(m => m.StareHaslo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.NoweHaslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NoweHaslo)
                @Html.ValidationMessageFor(m => m.NoweHaslo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ZatwierdzoneHaslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ZatwierdzoneHaslo)
                @Html.ValidationMessageFor(m => m.ZatwierdzoneHaslo)
            </div>

            <p>
                <input type="submit" value="Zmień hasło" />
            </p>
        </fieldset>
    </div>
}
