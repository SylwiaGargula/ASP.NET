<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" type="text/css" href="~/Content/css/moje.css" /> 


    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/Content/css/mdb.min.css" rel="stylesheet"
          type="text/css" />
    <script type="text/javascript"
            src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
    <script src="~/Content/js/mdb.min.js"></script>

    



</head>


<body>
    
    

    <header>

        <div class="navbar navbar-inverse navbar-fixed-top navbar-light blue">
            <div class="container">
                <div class="navbar-header ">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Gadżeciak", "Strona", "Produkts")</li>
                        <li>@Html.ActionLink("Zaloguj się", "Create", "Uzytkowniks")</li>
                        <li>@Html.ActionLink("Zarejestruj się", "Create", "Uzytkowniks")</li>
                        <li>@Html.ActionLink("Twój koszyk", "Index", "Koszyk")</li>
                        <li>
                            @{
                                if (Request.IsAuthenticated)
                                {
                                    using (Html.BeginForm("Logout", "Uzytkowniks", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                                    }
                                }
                                else
                                {
                                    @Html.ActionLink("Login", "Login", "Uzytkowniks")
                                }
                            }
                        </li>
                        <li>
                            @{ 
                                
                                    @Html.ActionLink("Panel Administratora","Create","Produkts")
                                
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--/.Navbar-->

    </header>
   
    
   <!--wywolanie liczby w koszyku-->
        
   


        <div class="col-md-2" >
            <div class="container body-content">

                @RenderBody()
                <hr />
                
            </div>
        </div>
    


            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
