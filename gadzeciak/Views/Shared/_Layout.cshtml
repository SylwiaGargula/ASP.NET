        })







    </script>
    <div class="row">
        
            <div class="col-md-2" id="left">
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li class="sidebar-search">
                                
                                <!-- /input-group -->
                            </li>
                            <li>
                                <a href="#" class="Zabawki"><i class="glyphicon glyphicon-piggy-bank"></i> Zabawki</a>
                            </li>

                            <li>
                                <a href="#" class="Jedzenie"><i class="glyphicon glyphicon-ice-lolly-tasted"></i> Jedzenie<span class="fa arrow"></span></a>


                            </li>
                            <li>
                                <a href="#" class="Dodatki"><i class="glyphicon glyphicon-plus"></i> Dodatki</a>
                            </li>
                            <li>
                                <a href="#" class="Gry"><i class="glyphicon glyphicon-queen"></i> Gry</a>
                            </li>

                            <li>

                                <a href="#" class="Okolicznosciowe"><i class="glyphicon glyphicon-star"></i> Okolicznościowe</a>

                            </li>
                            <li>
                                <a href="#" class="Kubki"><i class="glyphicon glyphicon-glass"></i>Kubki<span class="fa arrow"></span></a>

                            </li>

                            <li>
                                <a href="#" class="Elektronika"><i class="glyphicon glyphicon-wrench"></i> Elektronika</a>

                            </li>
                            <li>
                                <a href="#" class="Sport"><i class="glyphicon glyphicon-tent"></i> Sport</a>

                            </li>
                            <li>
                                <a href="#" class="Maski"><i class="glyphicon glyphicon-sunglasses"></i> Maski</a>

                            </li>
                            <li>
                                <a href="#" class="Wszystko"><i class="glyphicon glyphicon-option-vertical"></i> Wszystko</a>

                            </li>


                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>
            </div>
        


        <div class="col-md-2" id="right">
            <div class="container body-content">

                @RenderBody()
                
            </div>
        </div>
        
    </div>


            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
