@model IEnumerable<gadzeciak.Models.Uzytkownik>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" id="sortowanie">
    <meta name="viewport" content="width=device-width" />
    <h2>Lista</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Haslo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NazwaUzytkownika)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Imie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Haslo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazwaUzytkownika)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.IdUzytkownik })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.IdUzytkownik })
                </td>
            </tr>
        }

    </table>
</div>