@model gadzeciak.Models.Uzytkownik

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" id="sortowanie">
    <h2>Logowanie</h2>
   <div>
    <h3>Tylko zarejestrowany użytkownik ma wszystkie uprawnienia <br /> Dołącz do nas!</h3>
    @using (Html.BeginForm("Login", "Uzytkowniks", FormMethod.Post))
    {
        //this  is for create form tag
        @Html.AntiForgeryToken()          // this is for prevent CSRF attack
                                        @Html.ValidationSummary(true)
        if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <table>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <tr>
                <td>@Html.LabelFor(a => a.NazwaUzytkownika)</td>
                <td>@Html.TextBoxFor(a => a.NazwaUzytkownika)</td>
                <td>@Html.ValidationMessageFor(a => a.NazwaUzytkownika, "", new { @class = "text-danger" })</td>

            </tr>
            <tr>
                <td>
                    @Html.LabelFor(a => a.Haslo)
                </td>
                <td>
                    @Html.PasswordFor(a => a.Haslo)
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.Haslo, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Zaloguj się" class="btn btn-orange" />
                </td>
                <td></td>
            </tr>
        </table>
    }
    </div>
        <div>
            <br />
            <br />
            <br />
            <h3>Nie masz konta?</h3>
            <input type="button" value="Zarejestruj się!" class="btn btn-orange" onclick="location.href='@Url.Action("../Uzytkowniks/Create", "Uzytkowniks")'" />
        </div>
    

    @* This below line is for create javascript section *@

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
    </div>