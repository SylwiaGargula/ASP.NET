@model IEnumerable<gadzeciak.Models.UserRoles>

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<div class="row" id="sortowanie">
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

             $('.DodajRole').click(function () {
                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("CreatePartial","UserRoles")',
                    success: function (result) {
                        $('#widok').html(result);
                    }
                })
            })

             })

    </script>




    <div class="row" id="widok">
        <p>
            <a href="#" class="DodajRole">Dodaj rolę</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Roles.RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uzytkownik.Imie)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roles.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uzytkownik.Imie)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.UserRolesID })

                        @Html.ActionLink("Usuń", "Delete", new { id = item.UserRolesID })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>